{
  "name": "@economist/connect-api-proxy-middleware",
  "version": "1.2.0",
  "description": "A Connect middleware for Economist Drupal API",
  "author": "The Economist (http://economist.com)",
  "license": "LicenseRef-LICENSE",
  "repository": "git://github.com/economist/connect-api-proxy-middleware",
  "homepage": "https://github.com/economist/connect-api-proxy-middleware",
  "bugs": "https://github.com/economist/connect-api-proxy-middleware/issues",
  "main": "index.es6",
  "config": {
    "lint_opts": "--ignore-path .gitignore --ext .es6"
  },
  "babel": {
    "stage": 2,
    "loose": "all",
    "compact": false
  },
  "eslintConfig": {
