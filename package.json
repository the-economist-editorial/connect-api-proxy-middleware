  "devDependencies": {
    "babel": "^5.8.23",
    "babel-eslint": "^4.1.3",
    "chai": "^3.3.0",
    "chai-http": "^1.0.0",
    "connect": "^3.4.0",
    "eslint": "^1.7.2",
    "eslint-config-strict": "^6.0.1",
    "eslint-plugin-one-variable-per-var": "0.0.3",
    "mocha": "^2.3.3",
    "pre-commit": "^1.1.2",
    "replay": "^2.0.6"
  },
  "pre-commit": [
    "lint"
  ]
